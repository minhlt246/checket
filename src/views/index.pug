extends _layouts/master

block content
    section
        #carouselExampleControls.carousel.slide.coffe(data-bs-ride='carousel')
            .carousel-inner.coffe-banner
                .carousel-item.active
                    img.d-block.w-100.coffe-banner-img(src='./client/images/cf-bg.jpeg' alt='banner-gongcoffee-1' draggable='false')

                .carousel-item
                    img.d-block.w-100.coffe-banner-img(src='./client/images/cfw.jpg' alt='banner-gongcoffee-2' draggable='false')

                .carousel-item
                    img.d-block.w-100.coffe-banner-img(src='./client/images/cf-r.jpeg' alt='banner-gongcoffee-3' draggable='false')

            button.carousel-control-prev(type='button' data-bs-target='#carouselExampleControls' data-bs-slide='prev')
                span.carousel-control-prev-icon(aria-hidden='true')
                span.visually-hidden Previous
            button.carousel-control-next(type='button' data-bs-target='#carouselExampleControls' data-bs-slide='next')
                span.carousel-control-next-icon(aria-hidden='true')
                span.visually-hidden Next
